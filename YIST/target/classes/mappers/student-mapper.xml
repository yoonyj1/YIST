<!-- 과제 상세 조회 -->
<select id="selectTask" resultMap="taskResultSet">
	select
		   task_no
		 , task_title
		 , id
		 , to_char(start_date, 'YYYY-MM-DD') as "start_date"
		 , task_content
	  from task
	 where task_no = #{taskNo}
</select>

<!-- 우리반 게시판 QnA 목록 조회 -->
<select id="qnaList" resultMap="qnaResultSet">
	select
	       board_no
	     , board_title
	     , board_writer
	     , to_char(create_date, 'YYYY-MM-DD') as "create_date"
	     , count
	  from qna
	 where status = 'Y'
	 order
	    by board_no desc
</select>

<!-- 과제 등록 -->
<insert id="taskInsert">
	insert
	  into task_submit
	     (
	       task_no
	     , student_id
	     , submit_content
	     , submit_date
	     , status
	     )
	     values
	     (
	       seq_tno.nextval
	     , #{studentId}
	     , #{submitContent}
	     , sysdate
	     , 'Y'
	     )
</insert>
</mapper>