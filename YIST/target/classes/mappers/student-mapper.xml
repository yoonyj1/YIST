	     , to_char(create_date, 'YYYY-MM-DD') as "create_date"
	     , count
	  from material_board
	 where status = 'Y'
	 order
	    by board_no desc
</select>

<!-- 우리반 게시판 과제 목록 조회 -->
<select id="taskList" resultMap="taskResultSet">
	select 
	       t.task_no
	     , t.task_title
	     , t.id
	     , to_char(t.start_date, 'YYYY-MM-DD') as "start_date"
	     , to_char(t.end_date, 'YYYY-MM-DD') as "end_date"
	     , ts.submit_content
	     , ts.student_id
	     , to_char(ts.submit_date, 'YYYY-MM-DD') as "submit_date"
	  from task t 
	  left outer join task_submit ts on t.task_no = ts.task_no
	 order
	    by t.task_no desc
</select>
